<div role='banner' class="header_ynote">
    {{#if @blog.logo}}<a class="logo_ynote" href="{{@blog.url}}"><img src="{{@blog.logo}}" alt="{{@blog.title}}" /></a>{{/if}}
    <h1 class="blogtitle_ynote text-center text-uppercase">
        <a title="{{@blog.title}}" href='{{@blog.url}}'>
            {{{@blog.title}}}
        </a>
    </h1>
    <p class="blogdescription_ynote text-center">
        <a title="{{@blog.title}}" href='{{@blog.url}}'>
            {{@blog.description}}
        </a>
    </p>
</div>